---
import PostList from '@/components/PostList';
import Layout from '../../layouts/MainLayout.astro';

import { getCollection, getEntries } from 'astro:content';
import PostListAstro from '@/components/PostListAstro.astro';
import { SITE_URL } from '@/consts';
import { shopResult } from '@/utils/schemas'
import type { z } from 'zod';

type ShopData = z.infer<typeof shopResult>;

const res = await fetch(SITE_URL + "/api/shop", {
	method: "GET",
});
const data : ShopData = await res.json();

export async function getStaticPaths() {
const res = await fetch(SITE_URL + "/api/shop", {
	method: "GET",
});
const data : ShopData = await res.json();
  return data?.map((post) => {
    return {
      params: { id: post.id },
      props: { post },
    };
  });
}

---
<Layout
	title="Shop"
	description="Lorem ipsum dolor sit amet"
>
	<main>
		<section class="p-4">
			<div class="flex content-center justify-center">
				<h2 >Shop</h2>
			</div>
			<!-- <PostList client:load/> -->
			<PostListAstro posts={data} />
		</section>
	</main>	
</Layout>